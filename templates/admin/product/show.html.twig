{% extends 'admin/admin-base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ product.slug }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ product.currency }}</td>
            </tr>
            <tr>
                <th>Is Discount?</th>
                <td>{{ product.isDiscount }}</td>
            </tr>
            <tr>
                <th>Discount Type</th>
                <td>{{ product.discountType }}</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>{{ product.discount }}</td>
            </tr>
            <tr>
                <th>Is Product Bundle</th>
                <td>{{ product.isProductBundle }}</td>
            </tr>
            <tr>
                <th>Sku</th>
                <td>{{ product.sku }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ product.status }}</td>
            </tr>
            <tr>
                <th>Image Type</th>
                <td>{{ product.imageType }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                {% if product.imageType == 'Link' %}
                        <img src="{{ product.image }}" width="300" height="250">
                    {% else %}
                        <img src="{{ path('app_homepage') }}/public/uploads/{{ product.image }}" width="300" height="250">
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description|raw }}</td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated At</th>
                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('/admin/product/_delete_form.html.twig') }}
{% endblock %}
